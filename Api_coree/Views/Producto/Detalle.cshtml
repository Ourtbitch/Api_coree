@model Api_coree.Models.Producto

<h2>@ViewBag.Accion</h2>

<form asp-action="GuardarCambios">
    <input type="hidden" asp-for="IdProducto" />

    <div class="mb-2">
        <label asp-for="CodigoBarra" class="form-label"></label>
        <input asp-for="CodigoBarra" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Marca" class="form-label"></label>
        <input asp-for="Marca" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Categoria" class="form-label"></label>
        <input asp-for="Categoria" class="form-control" />
    </div>

    <div class="mb-2">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
